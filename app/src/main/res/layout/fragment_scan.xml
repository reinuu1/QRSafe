<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cyber_gradient"
    android:padding="20dp">

    <!-- ConÈ›inut centrat -->
    <LinearLayout
        android:id="@+id/centerContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ” VerificÄƒ un link sau cod QR"
            android:textSize="22sp"
            android:textColor="@color/cyber_text"
            android:fontFamily="@font/orbitron_bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/urlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introdu un link aici..."
            android:inputType="textUri"
            android:padding="14dp"
            android:textColor="@color/cyber_text"
            android:textColorHint="#88FFFFFF"
            android:backgroundTint="@color/cyber_glow"
            android:fontFamily="@font/orbitron_medium"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/scanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VerificÄƒ linkul"
            android:textAllCaps="false"
            style="@style/CyberButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/scanQrButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScaneazÄƒ cod QR"
            android:textAllCaps="false"
            style="@style/CyberButtonStyle"
            android:layout_gravity="center_horizontal"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/resultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="#1AFFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/urlText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://..."
                    android:textSize="16sp"
                    android:textColor="@color/cyber_text"
                    android:fontFamily="@font/orbitron_medium"/>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statusul analizei..."
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/cyber_glow"
                    android:fontFamily="@font/orbitron_medium"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
